
<div id="thing_<%= switch.id %>" class="tile col-lg-2 col-md-3 col-sm-6 col-xs-6 zone_<%= switch.zone_id %> item">
<div class="dummy"></div>
  <div class="thumbnail">
      <div class="widget-title handle">
      <% if @location && @zone %>
          <% if current_page?(location_zone_path(@location, @zone)) %>
            <h4>Switch</h4>
          <% end %>
        <% else %>
            <h4 class="hidden-xs"><%= link_to switch.zone.name, location_zone_path(switch.zone.location, switch.zone) %></h4>
        <% end %>
      </div>
      <div class= "device-wrapper">
        <%= form_for switch, :remote=> true do |t| %>
             <div class="toggle">
              <%= t.check_box(:switch_value, {data: {"toggle"=> "toggle","onstyle"=>"success", "offstyle"=>"default"}, class: 'switch_'+switch.uid+' switch_class', :checked => false}, "off", "on") %>
             </div>
            
             <%= t.text_field :switch_type, :value => "", :hidden => true %>
             <%= t.text_field :source, :value => "remote", :hidden => true %>
        <% end %>
      </div>
      <div class="device-footer">
        <h5><%= switch.label %></h5>
      </div>
  </div>
</div>