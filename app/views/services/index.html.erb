

<div class="container">
	<% @services.each do |service| %>
		<h2><%= service.name %></h2>
		 <h3><a href="/auth/smartthings/">Authrorize Devices</a></h3>
		 <h3><%= link_to "Import", :controller => "things", :import => true %></h3>
		 <h3><%= link_to  "Disconnect", service_path(service), method: :delete, data: { confirm: 'Are you sure?' }, :class=> "hidden-sm hidden-xs"%></h3></br>
	<% end %>


	<% if @user.services.smartthings == nil %>
		<h2>Connect to Smart Things</h2>
		<%= link_to "connect", "/auth/smartthings" %>
	<% end %>

</div>