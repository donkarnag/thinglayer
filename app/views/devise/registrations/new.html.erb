

	 <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign Up</h3>
                    </div>
                    <div class="panel-body">
                     <%= devise_error_messages! %>
                       <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                            <fieldset>
                               	<div class="form-group">

									<%= f.text_field :email, :class=> "form-control input-lg", :placeholder=> "E-mail", :required => true%>
								
								</div>

								<div class="form-group">
									<%= f.text_field :username, :class=> "form-control input-lg", :placeholder=> "Username", :required => true%>
									
								
								</div>
								 <div class="form-group">
				   			    	 <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all, {:default=> "Pacific Time (US & Canada)"}, {:class => 'form-control'}  %>
				   			    	
				   			    </div>

								<div class="form-group">
									<%= f.password_field :password, :class=> "form-control input-lg", :placeholder=> "Password", :label=> false, :required=> true %>
									
								</div>
								<div class="form-group">
									<%= f.password_field :password_confirmation, :class=> "form-control input-lg", :placeholder=> "Confirm Password", :label=> false, :required=> true %>
									
								</div>
                                <div class="form-actions">
									<%= f.submit "Sign up", :class=> "btn btn-primary" %>
									
								</div>
                              
                            </fieldset>
                       <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
