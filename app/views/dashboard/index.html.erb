                                <h4><%= illuminant.zone.name %></h4>

                                </div>
                                <div class="temp illuminant_<%= illuminant.uid %>">
                                 
                                </div>
                                 <h5><%= illuminant.label %></h5>
                            </div>
                      </div>
                    
                    <% end %>
                
              
                  <% end %>
                  <% end %>
                </div>
                </div>
              <% end %> 

        
        </div>


</div>

