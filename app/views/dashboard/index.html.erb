                        <div class="dummy"></div>
                            <div class="thumbnail">
                                <div class="widget-title handle">
                                <h4><%= temp.zone.name %></h4>
                                </div>
                                <div class="temp temperature_<%= temp.uid %>">
                                  <%= temp.device_value %> Â°F
