                      <div id="thing_<%= dimmer.id %>" class="tile col-md-2 col-sm-4 col-xs-6">
                      <div class="dummy"></div>
                          <div class="thumbnail">
                              <div class="widget-title handle">
                              <h4><%= dimmer.zone.name %></h4>
                             

                              </div>
                              <% dimmer_switch = Thing.find_by(:device_type => "switch", :uid=> dimmer.uid ) %>
